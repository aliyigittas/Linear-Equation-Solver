#include <stdio.h> 
#include <string.h> 
#include <stdbool.h>
#include <stdlib.h>
#include <ctype.h>


int main(){
	
	
	char lines[20][20];
	FILE *p;
	p = fopen("text.txt", "r");
	int i = 0;
	
	 while(!feof(p)){
	fscanf(p,"%s",lines[i]);
	printf("%s\n", lines[i]);
	i++;
	}
	
	fclose(p);
	
	char variables[10];
	
	//printf("%s", first[0]);
	
	//printf("%c", firstline[1]);
	
	
	int j = 0;
	int b = 0;
	
	for(i=0; lines[b][i] != '='; i++){
			
		if (isalpha(lines[b][i]) != 0){
		
            printf("this is one of the variables %c which is left side of the equation\n", lines[b][i]);
            variables[j] = lines[b][i];
            printf("this is the %d. variable = %c which is left side of the equation\n", j, variables[j]);
            j++;
            	
			}
        }
        
        
		//printf("%c\n", firstline[i]);
	
	
	for(; lines[b][i] != '\0'; i++){
		
		if (isalpha(lines[b][i]) != 0){
		
            printf("this is one of the variables %c which is right side of the equation\n", lines[b][i]);
            variables[j] = lines[b][i];
            printf("this is the %d. variable = %c which is right side of the equation\n", j, variables[j]);
            j++;
        }
		
	}
	
	char coefficients[4][4];
	j = 0;
	int m = 0;
	
	p = fopen("text.txt", "r");
	
	for(i=0; lines[b][i] != '='; i++){
		
		if(lines[b][i] == variables[j]){
			
			
			printf("the first variable is %c\n", variables[j]);
			
			
			
			if(i == 0 || lines[b][i-1] == '+' || lines[b][i-1] == '-'){
				
				coefficients[m][j] = '1';
				printf("the first coefficient is %c\n", coefficients[m][j]);
				j++;
				
			}

			
			else{
				
				coefficients[m][j] = lines[b][i-1];
				printf("the first coefficient is %c\n", coefficients[m][j]);
				j++;
			}
		
		}
	}
	
	
	
	

	return 0;
	
}
